name: "VPR config update 1"
description: "VPR config update 1 recipe for UBC Web Services websites"
type: "Media configuration"
config:
  actions:
    # enable standalone media settings
    core.entity_view_display.node.ubc_event.default:
      simple_config_update:
        hidden.field_event_is_virtual: true
    # update media permissions
    user.role.super_user:
      # If this role already exists, then this action has no effect. If it doesn't exist, we'll create it with the following values.
      createIfNotExists:
        id: super_user
        label: 'Super User'
        weight: 7
        is_admin: false
      grantPermissions:
        - 'create ics_file media'
        - 'delete any ics_file media'
        - 'delete own ics_file media'
        - 'edit any ics_file media'
        - 'edit own ics_file media'
        - 'view any ics_file media revisions'
        - 'delete any ics_file media revisions'
        - 'revert any ics_file media revisions'
